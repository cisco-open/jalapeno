apiVersion: apps/v1beta1
kind: StatefulSet
metadata:
  name: openbmpd
  namespace: voltron
spec:
  serviceName: "openbmpd"
  replicas: 1
  template:
    metadata:
      labels:
        app: openbmpd
      annotations:
        openshift.io/scc: privileged
    spec:
      terminationGracePeriodSeconds: 5
      containers:
        - name: openbmpd
          image: openbmp/collector
          ports:
            - containerPort: 5005
              protocol: TCP
          env:
            - name: KAFKA_FQDN
              value: '10.200.99.44:30902'
          readinessProbe:
            exec:
              command:
                - openbmpd
                - '-a'
                - openbmp-os
                - '-p'
                - '5002'
                - '-l'
                - /var/log/openbmpd.log
                - '-pid'
                - /var/run/openbmpd.pid
                - '-k'
                - '10.200.99.44:30902'
            initialDelaySeconds: 10
            timeoutSeconds: 10
            periodSeconds: 10
            successThreshold: 1
            failureThreshold: 3
          privileged: true
          runAsUser: 0
          resources: {}
          securityContext:
            privileged: true
            runAsUser: 0
